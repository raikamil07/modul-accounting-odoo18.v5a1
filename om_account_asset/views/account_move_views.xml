<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- METHOD 1: Target product_id field in invoice lines (Most Reliable) -->
        <record id="view_move_form_inherit_asset_category" model="ir.ui.view">
            <field name="name">account.move.form.asset.category</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']//field[@name='product_id']" position="after">
                    <field name="asset_category_id"
                           string="Asset Category"
                           domain="[('type', '=', 'purchase')]"
                           context="{'default_type': 'purchase'}"
                           column_invisible="parent.move_type not in ('in_invoice', 'in_receipt')"
                           optional="hide"/>
                </xpath>
            </field>
        </record>

